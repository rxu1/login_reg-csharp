@model Login

<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <form asp-action="Login" asp-controller="Login" style="display: inline-block" method="post">
        <h1>Login</h1>
        <div class="form-group">
          <span asp-validation-for="LoginEmail" class="text-danger"></span><br>
          <label asp-for="LoginEmail" class="form-horizontal">Email</label>
          <input type="text" class="form-horizontal" asp-for="LoginEmail" placeholder="name@email.com">
        </div>
        <div class="form-group">
          <span asp-validation-for="LoginPassword" class="text-danger"></span><br>
          <label asp-for="LoginPassword" class="form-horizontal">Password</label>
          <input type="password" class="form-horizontal" asp-for="LoginPassword">
        </div>
        <button class="btn btn-primary">Login!</button>
      </form>
    </div>
  </div>
</div>