@model Registration

<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <form asp-action="Register" asp-controller="Login" style="display: inline-block" method="post">
        <h1>Registration</h1>
        <div class="form-group">
          <span asp-validation-for="FirstName" class="text-danger"></span><br>
          <label asp-for="FirstName" class="form-horizontal" style="display: inline-block">First Name</label>
          <input type="text" class="form-horizontal" class="form-control" asp-for="FirstName">
        </div>
        <div class="form-group">
          <span asp-validation-for="LastName" class="text-danger"></span><br>
          <label asp-for="LastName" class="form-horizontal">Last Name</label>
          <input type="text" class="form-horizontal" class="form-control" asp-for="LastName">
        <div class="form-group">
          <span asp-validation-for="Email" class="text-danger"></span><br>
          <label asp-for="Email" class="form-horizontal">Email</label>
          <input type="text" class="form-horizontal" asp-for="Email" placeholder="name@email.com">
        </div>
        <div class="form-group">
          <span asp-validation-for="Password" class="text-danger"></span><br>
          <label asp-for="Password" class="form-horizontal">Password</label>
          <input type="password" class="form-horizontal" asp-for="Password">
        </div>
        <div class="form-group">
          <span asp-validation-for="Confirm" class="text-danger"></span><br>
          <label asp-for="Confirm" class="form-horizontal">Confirm PW</label>
          <input type="password" class="form-horizontal" class="form-control" asp-for="Confirm">
        </div>
        <button class="btn btn-primary">Register!</button>
      </form>
    </div>
  </div>
</div>